<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Date_required_if_it_is_Paid</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Payment_Status__c , &apos;Approved&apos;),   ISBLANK(Payment_Date__c))</errorConditionFormula>
    <errorMessage>Payment date required for Approved Status</errorMessage>
</ValidationRule>
